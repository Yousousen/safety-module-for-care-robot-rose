import DataTypes.dzn;

interface IAccelerationCheck {
//	in bool get_acceleration(out int_t acc);
	in void safe_acceleration();
	in void unsafe_acceleration();
//	out void retrieve_acceleration();

	behaviour {
		enum State {Safe, Unsafe};
		State state = State.Safe;
		on safe_acceleration: {
			state = State.Safe;
		}
		on unsafe_acceleration: {
			state = State.Unsafe;
		}
	}
}

component AccelerationCheck {
	provides IAccelerationCheck iAccelerationCheck;

	behaviour {
		enum State {Safe, Unsafe};
		State state = State.Safe;
		on iAccelerationCheck.safe_acceleration(): {
			state = State.Safe;
		}
		on iAccelerationCheck.unsafe_acceleration(): {
			state = State.Unsafe;
		}
	}
}
